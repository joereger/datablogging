
<%@ page import="java.util.*,
                 reger.core.SystemProperty,
                 reger.systemproperties.AllSystemProperties,
                 reger.core.db.DbConfig" %>

<%
/*----------------------------------------------------*/
/*                  Page Config                       */
reger.pageFramework.PageProps pageProps = new reger.pageFramework.PageProps();
pageProps.siteSection=pageProps.MASTERADMINSITE;
pageProps.title = "Database Connection Setup";
pageProps.isPasswordProtected = true;
pageProps.navButtonName = "loesystemconfigdb";
pageProps.aclObjectName = "MASTERADMIN";
pageProps.pathToAppRoot="../";
/*----------------------------------------------------*/
%>

<%@ include file="../globalheader.jsp" %>

<%
/*----------------------------------------------------*/
/*                  Main Body                         */
    StringBuffer mb = new StringBuffer();
/*----------------------------------------------------*/

%>

<%
//Save the properties, test them
String errortext = "";
if (request.getParameter("action")!=null && request.getParameter("action").equals("save")){
    if (request.getParameter("dbserver")!=null && request.getParameter("dbport")!=null && request.getParameter("dbname")!=null){
        String dbConnUrl = "jdbc:mysql://"+request.getParameter("dbserver")+":"+request.getParameter("dbport")+"/"+request.getParameter("dbname")+"?autoReconnect=true";
        DbConfig.setDbConnectionUrl(dbConnUrl);
    }
    if (request.getParameter("dbusername")!=null){
        DbConfig.setDbUsername(request.getParameter("dbusername"));
    }
    if (request.getParameter("dbpassword")!=null){
        DbConfig.setDbPassword(request.getParameter("dbpassword"));
    }
    if (request.getParameter("dbmaxactive")!=null){
        DbConfig.setDbMaxActive(request.getParameter("dbmaxactive"));
    } else {
        DbConfig.setDbMaxActive("100");
    }
    if (request.getParameter("dbmaxidle")!=null){
        DbConfig.setDbMaxIdle(request.getParameter("dbmaxidle"));
    } else {
        DbConfig.setDbMaxIdle("20");
    }
    if (request.getParameter("dbminidle")!=null){
        DbConfig.setDbMinIdle(request.getParameter("dbminidle"));
    } else {
        DbConfig.setDbMinIdle("10");
    }
    if (request.getParameter("dbmaxwait")!=null){
        DbConfig.setDbMaxWait(request.getParameter("dbmaxwait"));
    } else {
        DbConfig.setDbMaxWait("10000");
    }
    //Save if it passes the connection test
    DbConfig.save();
    if (DbConfig.haveValidConfig()){
        errortext = "Database configuration accepted and saved.";
    } else {
        errortext = "There was an error.  This may mean that the application couldn't connect to the database.  This may also mean that the application did connect to the database but that the account it used didn't have enough permissions to run the application properly.";
    }
}


mb.append("<br><br>");


if (!errortext.equals("")){

    mb.append("<font face=arial size=+2 color=#ff0000>"+errortext+"</font>");
    mb.append("<br><br>");
    mb.append("<font face=arial size=+1 color=#cccccc>Use your browser's back button to adjust the settings.</font>");

} else {


    mb.append("<center>");
    mb.append("<form action=systemdb.log method=post>");
    mb.append("<input type=hidden name=action value=save>");

    mb.append("<table cellpadding=5 cellspacing=0 width=75% border=0>");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Machine Location");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbserver value=\"localhost\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("The name of the server that MySQL is installed on.   This can be a machine name like 'localhost' or an ip address like '127.0.0.1'");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop -->");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Port");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbport value=\"3306\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("The port that MySql is running on.  By default it runs on port '3306'");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop --> ");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Name");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbname value=\"reger\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("The name of the database on MySql that should be used to store blog entries and other data.  This database needs to exist already in MySql (it can be empty), and the username/password combo you define on this page must be able to access it... the application will setup the tables needed to run the blogging server. See the username for access requirements.");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop -->");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Username");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbusername value=\"username\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("This username must already be set up in MySql and must have Select, Insert, Update, Delete, Create, Drop, Alter and Index privileges on the database specified in the connection string above.  If you're having trouble, start by granting this user all permissions and then back off of them one at a time to increase security.  It must have the permissions listed to be able to upgrade the database as upgrades are launched.");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop -->");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Password");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbpassword value=\"password\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("The password for the user specified above.");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop -->");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Max Active Connections");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbmaxactive value=\"30\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("The maximum number of connections to the database.  MySql must be configured to accept at least this many connections concurrently.  Start with a low number like 30 and increase as required.");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop -->");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Max Idle Connections");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbmaxidle value=\"15\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("The maximum number of idle connections to the database.  More idle connections allow the application to burst into action more quickly.  Start with a number about half of your maximum connections.");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop -->");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Min Active Connections");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbminidle value=\"10\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("The minimum number of idle connections to the database.  Start with 25% of your max connections.");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop -->");

    mb.append("<!-- Begin Prop -->");
    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("Database Max Wait");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<tr>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("<input type=text name=dbmaxwait value=\"10000\" size=45 maxlength=255>");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("<td valign=top align=left>");
    mb.append("<font face=arial size=-1>");
    mb.append("The maximum amount of time in ms to wait for a response from the database.  Start with 10000 and adjust as necessary.");
    mb.append("</font>");
    mb.append("</td>");
    mb.append("</tr>");
    mb.append("<!-- End Prop -->");



    mb.append("<tr>");
    mb.append("<td valign=top align=left colspan=2>");
    mb.append("<font face=arial size=+2 color=#cccccc>");
    mb.append("<input type=submit value='Save Database Configuration'>");
    mb.append("</font>");
    mb.append("</form>");
    mb.append("</td>");
    mb.append("</tr>");


    mb.append("</table>");


    mb.append("</form>");
    mb.append("</center>");


}


%>

